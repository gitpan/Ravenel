#!/usr/bin/perl

use strict;
use FindBin;
use lib ( "../lib", $FindBin::Bin, "$FindBin::Bin/../lib" );

use Ravenel;
use Ravenel::Document;

my $obj = new Ravenel( { 
	'docroot' => $FindBin::Bin,
	'dynamic' => 1,
} );

my Ravenel::Document $doc = $obj->add_document( {
	'data'         => qq(Before <r:Moo:test_format format simple>{a}, {b}</r:Moo:test_format> After), 
	'prefix'       => 'r:',
	'content_type' => 'html',
	'name'         => 'test',
} );

my $res = $doc->parse();

print $res . "\n";
